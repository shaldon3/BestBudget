<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">

    <!-- Background circle with lavender color -->
    <path
        android:fillColor="#D8C3F1"
        android:pathData="M54,54m-54,0a54,54 0 1,1 108,0a54,54 0 1,1 -108,0" />

    <!-- Piggy Bank/Wallet Icon Group -->
    <group android:pivotX="54" android:pivotY="54">

        <!-- Piggy Bank Body -->
        <path
            android:fillColor="#FFFFFF"
            android:pathData="M40,50 c0,-10 28,-10 28,0 v14 c0,6 -6,10 -14,10 s-14,-4 -14,-10 z" />

        <!-- Coin slot with slight rounded ends -->
        <path
            android:fillColor="#5E35B1"
            android:pathData="M49.5,43.5 h9 a0.5,0.5 0 0,1 0,1 h-9 a0.5,0.5 0 0,1 0,-1 z" />

        <!-- Progress Bar (Circular Outline) -->
        <path
            android:fillColor="#00000000"
            android:strokeColor="#FFFFFF"
            android:strokeWidth="4"
            android:pathData="M54,10a44,44 0 1,1 0,88a44,44 0 1,1 0,-88z" />

        <!-- Progress Indicator (75%) -->
        <path
            android:fillColor="#00000000"
            android:strokeColor="#5E35B1"
            android:strokeWidth="4"
            android:strokeLineCap="round"
            android:trimPathStart="0"
            android:trimPathEnd="0.75"
            android:pathData="M54,10a44,44 0 1,1 0,88" />

        <!-- Shadow Effect -->
        <path
            android:pathData="M40,74c0,0 28,-5 28,0">
            <aapt:attr name="android:fillColor">
                <gradient
                    android:startX="40"
                    android:startY="74"
                    android:endX="68"
                    android:endY="74"
                    android:type="linear">
                    <item android:color="#AA5E35B1" android:offset="0.0" />
                    <item android:color="#005E35B1" android:offset="1.0" />
                </gradient>
            </aapt:attr>
        </path>

    </group>
</vector>
